<ehcache> xmlns="http://www.ehcache.org/v3"
         updateCheck="true">

    <cache alias="getAllList"
           uses-template="myTemplate"
           timeToLiveSeconds="3">
    </cache>

    <cache-template name="myTemplate">
        <expiry>
            <ttl unit="seconds">3</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

</ehcache>

